<Page x:Class="Warenwirtschaftssystem.UI.Pages.DatePickerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="DatePickerPage"
      Width="192">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DatePicker Name="MainDatePicker" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="SaveBtn" Click="SaveBtn_Click" Content="Speichern" />
            <Button Name="CancelBtn" Click="CancelBtn_Click" Content="Abbrechen" Margin="4 0 0 0" />
        </StackPanel>
    </Grid>
</Page>
