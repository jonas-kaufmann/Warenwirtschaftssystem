<Window x:Class="Warenwirtschaftssystem.UI.Windows.RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Warenwirtschaftssystem" MinHeight="600" MinWidth="800" WindowState="Maximized">
    <StackPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Name="SettingsMI" Click="SettingsMI_Click" Header="Einstellungen" />
            <MenuItem Name="RestoreDbMI" Click="RestoreDbMI_Click" Header="Backup wiederherstellen" />
        </Menu>
        <DockPanel Margin="8">
            <!-- Topbar -->
            <Frame Name="TopbarFrame" DockPanel.Dock="Top"/>
        </DockPanel>
    </StackPanel>

</Window>
